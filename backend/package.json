{
  "name": "backend",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "copy-frontend": "mkdir -p dist/frontend && cp -r frontend/dist/* dist/frontend/",
    "build-backend": "tsc",
    "build": "npm run copy-frontend && npm run build-backend",
    "start": "node dist/index.js",
    "start:local": "npm run clean && npm run build && npm run start",
    "dev": "ts-node --esm src/index.ts"
  },
  "dependencies": {
    "express": "^5.1.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.9.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
